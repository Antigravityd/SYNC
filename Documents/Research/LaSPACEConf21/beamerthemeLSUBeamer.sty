\ProvidesPackage{beamerthemeLSUBeamer}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\selectcolormodel{rgb}
\mode<presentation>
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{caption}[numbered]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% custom colors
\definecolor{lsupurple}{rgb}{0.275,0.114,0.486}
\definecolor{lsugold}{rgb}{0.992,0.816,0.137} 
\definecolor{lsucorpurple}{rgb}{0.234,0.063,0.325}
\definecolor{lsucorgold}{rgb}{0.824,0.624,0.075}

% headline colors and fonts
\setbeamercolor{headline}{fg=black,bg=white}
\setbeamercolor{title in headline}{fg=lsupurple}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}
\setbeamercolor{logo in headline}{fg=white,bg=white}
\setbeamercolor{separation line}{bg=white,fg=black}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=white}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block separation}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=lsupurple,bg=white}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamerfont{block body}{size=\large}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=white}
\setbeamerfont{footline}{size=\normalsize}

% example environment
\setbeamercolor*{example title}{fg=white,bg=black}
\setbeamerfont{example title}{size=\normalsize,series=\bf}

\setbeamercolor{alerted text}{fg=black}
\setbeamercolor{caption name}{fg=black}

\setbeamertemplate{itemize item}[circle]
\setbeamercolor{itemize item}{fg=black,bg=white}

\setbeamercolor{enumerate item}{fg=black,bg=white}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.0001ex
  \begin{beamercolorbox}[leftskip=0.3cm,colsep*=.75ex]{block title}%
  	\centering
    \usebeamerfont*{block title}\textbf{\Large{\insertblocktitle}}
  \end{beamercolorbox}%
	\begin{beamercolorbox}[wd=\linewidth]{block separation line}
		\rule{\textwidth}{2pt}
	\end{beamercolorbox}
  	{\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  	\usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
    \justifying
  }

\setbeamertemplate{block end}{
  \end{beamercolorbox}
	\vskip 0.0001ex
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  	\begin{beamercolorbox}[wd=\paperwidth,ht=.125\paperheight]{headline}
		\centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\inserttitle}}\\[1ex]}
        \vskip.16in
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[1ex]}
        \vskip.02in
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
        \vskip.05in
        \begin{beamercolorbox}[wd=\linewidth]{separation line}
        	\centering
        	\rule{0.97916\linewidth}{3pt}
        \end{beamercolorbox}
  	\end{beamercolorbox}
  
  	\begin{tikzpicture}[remember picture,overlay] 
